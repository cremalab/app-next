{
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "start:ci": "cross-env CI=true run-s build start",
    "test": "npm run test:unit",
    "test:unit": "jest --watch",
    "test:unit:ci": "jest --ci --runInBand",
    "test:unit:coverage": "npm run test:unit -- --coverage --watchAll=false --watch=false",
    "test:unit:coverage:watch": "npm run test:unit:coverage -- --watchAll=true",
    "test:types": "tsc --pretty --noEmit",
    "test:lint": "eslint -c ./.eslintrc.json ./src --ext .ts,.tsx",
    "test:lint:fix": "npm run test:lint -- --fix",
    "test:e2e": "npx cypress open",
    "test:e2e:headless": "npx cypress run",
    "test:e2e:ci": "cross-env CI=true CYPRESS_baseUrl=http://localhost:3000 start-server-and-test start:ci http://localhost:3000 test:e2e:headless",
    "test:ci": "cross-env CI=true run-s test:lint test:types test:unit:ci test:e2e:ci",
    "test:playground": "start-storybook -p 6006 -s ./public",
    "test:playground:build": "build-storybook -s ./public --no-dll",
    "build-storybook": "build-storybook -s ./public"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "npm run test:ci"
    }
  },
  "lint-staged": {
    "*.@(ts|tsx)": [
      "npm run test:lint",
      "npm run test:lint:fix"
    ]
  },
  "dependencies": {
    "next": "latest",
    "react": "^17.0.2",
    "react-dom": "^17.0.2"
  },
  "devDependencies": {
    "@babel/core": "^7.15.0",
    "@next/eslint-plugin-next": "^11.1.2",
    "@storybook/addon-actions": "^6.3.7",
    "@storybook/addon-essentials": "^6.3.7",
    "@storybook/addon-links": "^6.3.7",
    "@storybook/react": "^6.3.7",
    "@testing-library/cypress": "^8.0.0",
    "@testing-library/jest-dom": "^5.14.1",
    "@testing-library/react": "^11.2.5",
    "@types/jest": "^26.0.23",
    "@types/node": "^14.14.25",
    "@types/react": "^17.0.1",
    "@typescript-eslint/eslint-plugin": "^4.14.2",
    "@typescript-eslint/parser": "^4.14.2",
    "babel-jest": "^27.0.2",
    "babel-loader": "^8.2.2",
    "cross-env": "^7.0.3",
    "eslint": "^7.19.0",
    "eslint-config-prettier": "^7.2.0",
    "eslint-config-react-app": "^6.0.0",
    "eslint-plugin-cypress": "^2.11.3",
    "eslint-plugin-flowtype": "^5.9.2",
    "eslint-plugin-import": "^2.24.2",
    "eslint-plugin-jsx-a11y": "^6.4.1",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-react": "^7.25.1",
    "eslint-plugin-react-hooks": "^4.2.0",
    "husky": "^4.2.3",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^27.0.4",
    "jest-watch-typeahead": "^0.6.1",
    "lint-staged": "^10.0.10",
    "npm-run-all": "^4.1.5",
    "postcss-preset-env": "^6.7.0",
    "prettier": "^2.0.2",
    "sass": "^1.38.2",
    "sass-loader": "^10.2.0",
    "start-server-and-test": "^1.14.0",
    "typescript": "^4.1.3"
  }
}
